<?php

/**
 * Implementation of hook_uninstall().
 *
 * Delete all of our variables from the variables table.
 */
function encrypt_uninstall() {
  $vars = db_select('variable', 'v')
    ->fields('v', array('name'))
    ->condition('name', 'encrypt_%', 'LIKE')
    ->execute()
    ->fetchCol();

  foreach ($vars as $var) {
    variable_del($var);
  }
}
